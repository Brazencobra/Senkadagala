@model IEnumerable<Setting>
<div class="table-responsive">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <th>Key</th>
                <th>Value</th>
            </tr>
        </tbody>
        <thead>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Key</td>
                        <td>@item.Value</td>
                        <td><a class="btn btn-info" asp-area="Manage" asp-controller="Setting" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    </tr>
            }
        </thead>
    </table>
</div>