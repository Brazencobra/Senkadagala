@model UpdateSettingVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Setting</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Key">Key</label>
                    <input asp-for="Key" type="text" class="form-control">
                    <span asp-validation-for="Key"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Value">Value</label>
                    <input asp-for="Value" type="text" class="form-control">
                    <span asp-validation-for="Value"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2" asp-area="Manage" asp-controller="Setting" asp-action="Update">Update</button>
                <a class="btn btn-light" asp-area="Manage" asp-controller="Setting" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>